<Window x:Class="MySafeGUI.VaultCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySafeGUI"
        mc:Ignorable="d"
        Title="Create Vault" Height="200" Width="300" MinWidth="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="filePath" VerticalAlignment="Center" FontSize="15"/>
        <Button Opacity="0.2" Click="filePath_Click" ToolTip="{Binding ElementName=filePath, Path=ToolTip}"/>
        <local:TextControl x:Name="masterPassword" Str="Vault matster password" Grid.Row="1" FontS="15"/>

        <Button x:Name="createBtn" Grid.Row="2" Content="Create Vault" Click="Create_Click"/>
    </Grid>
</Window>
