<Window x:Class="MySafeGUI.VaultCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySafeGUI"
        mc:Ignorable="d"
        Title="VaultCreationWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter what you want the master password for the vault to be:" VerticalAlignment="Center"/>
        <TextBox x:Name="masterPassword" Grid.Row="1" Height="20" VerticalAlignment="Top"/>
        <TextBlock Text="Enter the name of the vault you'd like:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="VaultName" Grid.Row="3" Height="20" VerticalAlignment="Top"/>

        <Button x:Name="Done" Grid.Row="3" VerticalAlignment="Bottom" Click="Done_Click" Height="40" Width="100" Content="Done" FontSize="16"/>
    </Grid>
</Window>
